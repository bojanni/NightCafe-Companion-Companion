{
  "manifest_version": 3,
  "name": "NightCafe Studio Importer",
  "version": "1.0.0",
  "description": "Importeer NightCafe creaties direct naar je lokale app",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://creator.nightcafe.studio/*",
    "https://nightcafe.studio/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "NightCafe Importer"
  },
  "content_scripts": [
    {
      "matches": [
        "https://creator.nightcafe.studio/*",
        "https://nightcafe.studio/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "nightcafe-importer@studio",
      "strict_min_version": "128.0"
    }
  }
}
